@using Artsofte.Service.Dtos.Accounts;
@model AccountUpdateDto


<div class="w-lg-600px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
    <form asp-controller="employees" asp-action="update" asp-route-accountId="@Model.Id" method="post" novalidate="novalidate" class="form w-100 fv-plugins-bootstrap5 fv-plugins-framework">
        <div class="mb-10 text-center">
            <h1 class="text-registan mb-3">
                Update Account
            </h1>
        </div>
        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <div class="col-xl-6">
                <label class="form-label fw-bold text-dark fs-6">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-xl-6">
                <label class="form-label fw-bold text-dark fs-6">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control form-control-lg form-control-solid">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Age</label>
            <input type="number" asp-for="Age" class="form-control form-control-lg form-control-solid">
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Department</label><div class="col-lg-8 fv-row fv-plugins-icon-container">
                <select asp-for=Department data-control="select2" class="form-select form-select-solid form-select-lg fw-semibold select2-hidden-accessible" data-select2-id="select2-data-7-69qz" tabindex="-1" aria-hidden="true" data-kt-initialized="1">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="row fv-row mb-7 fv-plugins-icon-container">
            <label class="form-label fw-bold text-dark fs-6">Language</label>
            <select asp-for=Language data-control="select2" class="form-select form-select-solid form-select-lg fw-semibold select2-hidden-accessible" data-select2-id="select2-data-7-69qz" tabindex="-1" aria-hidden="true" data-kt-initialized="1">
                @*<option value="C#">C#</option>
                <option value="Python">Python</option>
                <option value="Java">Java</option>
                <option value="Go">Go</option>*@
                @{
                    var subjects = ViewBag.Landuage;
                    foreach (var subject in subjects)
                    {
                        <option value="@subject.Name.ToString()">@subject.Name.ToString()</option>
                    }
                }
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-registan">
                <span class="indicator-label">
                    Submit
                </span>
            </button>
        </div>
    </form>
</div>





















